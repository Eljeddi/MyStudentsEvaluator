<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_or_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps2life.mystudentsevaluator.TeacherOrStudent"
    android:background="@color/bgcolor">

    <TextView
        android:text="@string/are_you_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"/>
    <RadioGroup
        android:layout_below="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/logo_text"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/button_facebook_login">
        <RadioButton
            android:id="@+id/studentChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_choice"
            android:textSize="40sp"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>
        <RadioButton
            android:id="@+id/teacherChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher_choice"
            android:textSize="40sp"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/white"/>
    </RadioGroup>
</RelativeLayout>
