<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_quizz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps2life.mystudentsevaluator.AddQuizz"
    tools:showIn="@layout/activity_add_quizz">





    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question" />
    <EditText
        android:layout_below="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qstid"
        android:hint="tapez votre question ici!"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/op1id"
        android:hint="choix 1"
        android:layout_below="@+id/qstid"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/op2id"
        android:hint="choix 2"
        android:layout_below="@+id/op1id"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/op3id"
        android:hint="choix 3"
        android:layout_below="@+id/op2id"/>
    <Button
        android:id="@+id/qstAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter question"
        android:onClick="addMeth"
        android:layout_below="@id/op3id"/>
    <EditText
        android:id="@+id/QuizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qstAdd"
        android:hint="Quizz Name"/>

</RelativeLayout>